<%= form_with(model: bugz) do |form| %>
  <% if bugz.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bugz.errors.count, "error") %> prohibited this bugz from being saved:</h2>

      <ul>
        <% bugz.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>




  <% if current_user.user_type=="developer"%>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['new', 'started', 'resolved'] %>
  </div>
  <br>
  <% else%>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.label :deadline, style: "display: block" %>
    <%= form.date_field :deadline %>
  </div>
 
  <div class="field">
    <%= form.label :b_type %>
    <%= form.select :b_type, ['feature', 'bug'] %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['new', 'started', 'completed'] %>
  </div>

  <%= form.hidden_field :project_id, value: project.id %>
  <% end %>


  <div>
    <%= form.submit %>
  </div>
<% end %>
